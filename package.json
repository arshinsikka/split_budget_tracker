{
  "name": "split-budget-tracker",
  "version": "0.1.0",
  "description": "Backend app to split expenses and track budgets between two friends",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test:bb": "vitest run tests/acceptance/*.test.ts",
    "test:contract": "vitest run tests/contract/*.test.ts",
    "test:all:e2e": "bash scripts/e2e.sh",
    "test:independent": "npm run test:bb && npm run test:contract && npm run test:all:e2e"
  },
  "keywords": [
    "budget",
    "expense",
    "split",
    "tracker"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "express": "^4.18.2",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "vitest": "^1.2.1",
    "@apidevtools/swagger-parser": "^11.0.1",
    "openapi-response-validator": "^4.0.0",
    "fast-check": "^3.4.0",
    "undici": "^6.6.0",
    "get-port": "^7.0.0",
    "execa": "^8.0.1",
    "wait-on": "^7.2.0"
  }
}
